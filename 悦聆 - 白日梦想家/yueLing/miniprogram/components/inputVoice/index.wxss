.record {
	position: relative;
	margin-left: calc(50% - 200rpx);
	width: 400rpx;
	height: 400rpx;
}
.record__img {
	position: absolute;
	z-index: 2;
	width: 400rpx;
	height: 400rpx;
}
.record__ripple {
	width: 200rpx;
	height: 200rpx;
	border-radius: 100%;
	position: absolute;
	z-index: 0;
	background: transparent;
	left: calc(50% - 100rpx);
	top: calc(50% - 100rpx);
	animation: sploosh 4s cubic-bezier(0.165, 0.84, 0.44, 1) infinite;
}
.record__ripple-1 {
	animation-delay: 1s;
	-webkit-animation-delay:1s;
}

.record__ripple-2 {
	animation-delay: 2s;
}

.record__ripple-3 {
	animation-delay: 3s;
}
@keyframes sploosh {
	0% {
		box-shadow: 0 0 0 0px rgba(66, 166, 223, 0.7);
		background: rgba(66, 166, 223, 0.7);
	}

	100% {
		box-shadow: 0 0 0 40px rgba(66, 166, 223, 0);
		background: rgba(66, 166, 223, 0);
	}
}