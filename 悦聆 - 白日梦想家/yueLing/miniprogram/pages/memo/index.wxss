.memo {
	background: #f5f5f5;
	min-height: 100vh;
}

.search-home{
	position: absolute;
	z-index: 10;
	width: 36rpx;
	height: 36rpx;
	right: 42rpx;
	top: 32rpx;
}

.memo-list{
	height: calc(100vh - 212rpx);
	position: relative;
}
.item {
	box-sizing: border-box;
	width: 690rpx;
	opacity: 1;
	margin: 30rpx;
	background: #ffffff;
	border-radius: 16rpx;
	padding: 30rpx;
	position: relative;
}
.item__type {
	font-size: 32rpx;
	font-weight: 600;
	color: #999999;
	line-height: 2em;
}
.item__content {
	font-size: 40rpx;
	color: #222222;
	font-weight: 600;
}
.item__info{
	margin-top: 30rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.item__finish {
	position: absolute;
	height: 60rpx;
	right: 60rpx;
	top: 36rpx;
	color: #ccc;
	font-size: 24rpx;
	display: flex;
	align-items: center;
}
.item__finish-img {
	width: 46rpx;
	height: 46rpx;
}
.box {
	display: flex;
	align-items: center;
	font-size: 32rpx;
	font-weight: 500;
}
.box image {
	width: 60rpx;
	height: 60rpx;
	margin-right: 20rpx;
	border-radius: 50%;
}
.jt {
	width: 36rpx;
	height: 36rpx;
}
.footer {
	position: fixed;
	bottom: 0;
	background: #fff;
	width: 100vw;
	height: 200rpx;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 120rpx;
}
.footer .icon {
	position: relative;
	width: 100rpx;
	text-align: center;
}
.footer .icon image {
	position: absolute;
	left: 20rpx;
	margin-top: -40rpx;
	width: 60rpx;
	height: 60rpx;
}
.footer .image2 {
	margin-top: -120rpx;
	width: 224rpx;
	height: 224rpx;
}
.footer .icon .text {
	font-size: 20rpx;
	color: #333333;
	width: 100rpx;
	text-align: center;
	margin-top: 20rpx;
}
.footer .icon .active {
	color: #00c7bd;
}
.no-data {
