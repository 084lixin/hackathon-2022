.index {
	background: #f5f5f5;
	min-height: 100vh;
}
.family-list{
	height: calc(87vh)
}
.item {
	margin: 30rpx;
	width: 690rpx;
	height: 180rpx;
	opacity: 1;
	background: #ffffff;
	border-radius: 16rpx;
	position: relative;
	box-shadow: 0px 4px 80px 0px rgba(0,0,0,0.04);
}
.left {
	box-sizing: border-box;
	height: 100%;
	position: relative;
}
.left image {
	margin: 12rpx;
	width: 156rpx;
	height: 156rpx;
	border-radius: 50%;
}
.left .head-icon {
	width: 120rpx;
	height: 120rpx;
	margin-left: 30rpx;
	margin-top: 30rpx;
}
.left__info {
	display: inline-block;
	position: absolute;
	margin-left: 20rpx;
	top: 0;
	height: 90px;
	padding-top: 23px;
	box-sizing: border-box;
}
.left__info .title {
	display: flex;
	opacity: 1;
	font-size: 36rpx;
	font-weight: 600;
	color: #222222;
	line-height: 1.5em;
}
.left__info .tel {
	font-size: 28rpx;
	font-weight: 600;
	color: #999999;
	line-height: 28rpx;
}
.right {
	width: 136rpx;
	height: 64rpx;
	border: 1px solid #00c7bd;
	border-radius: 33rpx;
	color: #00c7bd;
	text-align: center;
	line-height: 64rpx;
	position: absolute;
	right: 40rpx;
	top: 58rpx;
}
.add-btn {
	width: 600rpx;
	height: 100rpx;
	opacity: 1;
	background: #00c7bd;
	font-size: 36rpx;
	color: #fff;
	text-align: center;
	line-height: 100rpx;
	border-radius: 50rpx;
	margin-left: 75rpx;
}
.advice{
	position: fixed;
	right: 30rpx;
	bottom:140rpx;
	width: 124rpx;
	height: 124rpx;
}
