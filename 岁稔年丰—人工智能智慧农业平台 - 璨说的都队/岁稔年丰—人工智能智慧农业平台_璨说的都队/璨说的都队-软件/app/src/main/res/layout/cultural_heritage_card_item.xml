<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginLeft="25dp"
    app:cardCornerRadius="12dp"
    android:id="@+id/card_click_culture"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="350dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#51E2C6"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_hw_1"
            ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <ImageView
                android:id="@+id/cultural_heritage_image"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_height="280dp"
                android:src="@drawable/culture_1"
                ></ImageView>

                <TextView
                    android:id="@+id/cultural_heritage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中阳剪纸"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    ></TextView>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    </FrameLayout>
</androidx.cardview.widget.CardView>