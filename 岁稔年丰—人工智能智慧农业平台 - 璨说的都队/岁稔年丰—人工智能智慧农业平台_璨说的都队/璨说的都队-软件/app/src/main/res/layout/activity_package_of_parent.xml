<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FEFE">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1FEFE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1FEFE"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="-60dp"
                app:cardBackgroundColor="#70D9DA"
                app:cardCornerRadius="40dp">
                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/product_back"
                        android:layout_marginTop="15dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/back"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="5dp"
                        ></ImageView>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特色当地"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        ></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/Image_parent"
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:layout_marginTop="-100dp"
                android:background="@drawable/package_of_parent_main_background" />

            <com.baidu.paddle.lite.demo.image_classification.PackageOfParent.PartLayout.CardViewIntroduceLayout
                android:id="@+id/CardViewIntroduceLayoutOfPackageOfParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-65dp"
                app:cardCornerRadius="20dp"></com.baidu.paddle.lite.demo.image_classification.PackageOfParent.PartLayout.CardViewIntroduceLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonSmallBackOfPackageOfParent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/small_back_button_of_package_of_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="套餐内容"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="330dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="-30dp"
                app:cardBackgroundColor="#AFE6EB">

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecycleViewContentOfPackageOfParent"
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>