<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/shouye_kecheng"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:outlineSpotShadowColor="#DDF5F7"
        android:layout_marginLeft="40dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView

                android:scaleType="fitXY"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:src="@drawable/qztc"
                ></ImageView>


                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:id="@+id/classroom_name_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="忻州糖人制作"
                        android:textColor="#51E2C6"
                        android:textSize="23sp"
                        ></TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="开课时间:2021-08-15 8:00"
                        ></TextView>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/good_item_name"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主讲人:陈玥"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            ></TextView>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥300"
                            android:textSize="17sp"
                            android:textColor="#51E2C6"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>