<?xml version="1.0" encoding="utf-8"?>
 <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:outlineSpotShadowColor="#CEEDE8"
        android:outlineAmbientShadowColor="#CEEDE8"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/employ_title"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招聘房产销售 （标题)"
                android:textColor="#40C3AB"
                android:textSize="18sp"
                ></TextView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/employ_price"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000-10000"
                android:textColor="#40C3AB"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                ></TextView>
                <TextView
                    android:id="@+id/employ_type"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·房产销售"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <Button
                android:layout_width="31dp"
                android:layout_marginLeft="12dp"
                android:layout_height="21dp"
                android:background="@drawable/button_grey_line"
                android:outlineAmbientShadowColor="#28CDB4"
                android:outlineSpotShadowColor="#28CDB4"
                android:text="包住"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="#888888"
                ></Button>
                <Button
                    android:layout_width="31dp"
                    android:layout_marginLeft="22dp"
                    android:layout_height="21dp"
                    android:background="@drawable/button_grey_line"
                    android:outlineAmbientShadowColor="#28CDB4"
                    android:outlineSpotShadowColor="#28CDB4"
                    android:text="社保"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#888888"
                    ></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/employ_images"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/tx1"
                    ></de.hdodenhof.circleimageview.CircleImageView>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/employ_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="***用户名"
                        ></TextView>
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/employ_shopname"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="********（企业/店铺名）"
                        ></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <Button
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:text="申  请"
                android:outlineSpotShadowColor="@color/white"
                android:shadowColor="@color/white"
                android:outlineAmbientShadowColor="@color/white"
                android:layout_marginTop="57dp"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:layout_marginRight="3dp"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:textStyle="bold"></Button>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
