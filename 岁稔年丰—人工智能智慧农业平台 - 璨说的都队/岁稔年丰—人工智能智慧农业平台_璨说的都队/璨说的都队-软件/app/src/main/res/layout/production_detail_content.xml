<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:outlineAmbientShadowColor="@color/white"
    android:outlineSpotShadowColor="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:textColor="#A5A0A0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewProductionDetailContentSelectDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="颜色分类/大小"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imageViewProductionDetailContentSelectPicture1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@mipmap/niurou1"
                       />

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imageViewProductionDetailContentSelectPicture2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@mipmap/niurou2"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        app:cardBackgroundColor="#EEEEEE"
                        android:outlineAmbientShadowColor="@color/white"
                        android:outlineSpotShadowColor="@color/white"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/TextViewProductionDetailContentSelectNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="共2种品类可选" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="-1dp"
                android:textColor="#A5A0A0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@+id/textViewProductionDetailContentSendPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="山西忻州"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#cccccc"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/textViewProductionDetailContentSendOtherNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费：6元"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="#A5A0A0"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保障"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProductionDetailContentPromise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3天内发货"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:textSize="16sp" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>