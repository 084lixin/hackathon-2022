<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_height="match_parent">
  <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/employment_back"
                        android:layout_marginTop="15dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/back"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="5dp"
                        ></ImageView>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附近就业"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        ></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <ImageView

            android:id="@+id/Classroom_banner"
            android:layout_marginTop="60dp"
            android:src="@drawable/offer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            ></ImageView>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_marginTop="295dp"
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:background="@color/white"
            >

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#48DDC2"
                app:cardBackgroundColor="#48DDC2"
                android:layout_marginLeft="40dp"
                app:cardCornerRadius="10dp"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/folowers"
                    android:layout_gravity="left"
                    ></ImageView>
                <ImageView
                    android:layout_marginTop="50dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/folowers"
                    android:layout_gravity="left"
                    ></ImageView>
            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="70dp"
                    app:cardCornerRadius="10dp"
                    >

                <com.baidu.paddle.lite.demo.image_classification.View.FirstFragmentGridView
                    android:id="@+id/employment_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:numColumns="3"
                    android:padding="3dp"
                    android:scrollbars="none"
                    android:verticalSpacing="2dp"
                    ></com.baidu.paddle.lite.demo.image_classification.View.FirstFragmentGridView>
                </androidx.cardview.widget.CardView>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.cardview.widget.CardView
                            android:outlineSpotShadowColor="@color/white"
                            android:layout_marginRight="55dp"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginTop="130dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#DDF5F7"
                            app:cardBackgroundColor="#DDF5F7"
                            app:cardCornerRadius="10dp"
                            ></androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="热门招聘"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="140dp"
                            ></TextView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/employment_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="166dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/sgyp"
                            ></androidx.recyclerview.widget.RecyclerView>

                    </FrameLayout>
                </FrameLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

</ScrollView>
</LinearLayout>