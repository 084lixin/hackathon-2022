<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/agriculture_back"
                android:layout_marginTop="25dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:layout_gravity="left|center"
                android:layout_marginLeft="5dp"
                ></ImageView>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农家乐"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                 android:id="@+id/agr_bar_image_first"
                    android:layout_width="50dp"
                    android:layout_marginTop="17dp"
                    android:layout_height="12dp"
                    android:src="@drawable/action_bar_radius_agr"

                    ></ImageView>
            <TextView
                android:id="@+id/agr_bar_text_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农家生活"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>

            </FrameLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/agr_bar_image_second"
                    android:layout_width="50dp"
                    android:layout_marginTop="17dp"
                    android:layout_height="12dp"
                    android:src="@drawable/action_bar_radius_agr"
                    android:visibility="gone"
                    ></ImageView>
                <TextView
                    android:id="@+id/agr_bar_text_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="种草清单"
                    android:textSize="16sp"
                    android:textColor="#cccccc"
                    android:textStyle="bold"
                    ></TextView>

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/agriculture_viewpager"
        ></androidx.viewpager.widget.ViewPager>
</LinearLayout>