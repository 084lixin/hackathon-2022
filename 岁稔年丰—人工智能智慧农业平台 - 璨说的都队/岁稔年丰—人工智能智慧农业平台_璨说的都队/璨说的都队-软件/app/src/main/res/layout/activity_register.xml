<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:layout_marginTop="0dp"
        android:src="@mipmap/login" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:text="欢迎注册中北农服!"
        android:textSize="28sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_light"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">



        <EditText
            android:id="@+id/regist_name"
            android:layout_width="271dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:theme="@style/MyEditText"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:paddingLeft="5dp"
            android:singleLine="true" />
        <EditText
            android:id="@+id/regist_account"
            android:layout_width="271dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:theme="@style/MyEditText"
            android:layout_below="@+id/regist_name"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:paddingLeft="5dp"
            android:singleLine="true" />


        <EditText
            android:id="@+id/regist_password"
            android:layout_width="271dp"
            android:layout_height="45dp"
            android:layout_below="@+id/regist_account"
            android:layout_marginTop="15dp"

            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/regist_password2"
            android:layout_width="271dp"
            android:layout_height="45dp"
            android:layout_below="@+id/regist_password"
            android:layout_marginTop="15dp"

            android:gravity="center_vertical"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:singleLine="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="-50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"


            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/checkBox_rege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:id="@+id/block_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >



                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="我已阅读并同意" />

                    <TextView
                        android:id="@+id/textView2"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《中北农服用户协议》"
                        android:textColor="@color/green"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/block_2"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/block_1"
                    >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《隐私政策》"
                        android:textSize="14dp"
                        android:textColor="@color/green"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:textSize="14dp"
                        android:text="并授权中北农服使用该软件" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/block_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_toEndOf="@id/block_2"
                    >
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="账号信息(如昵称，头像)进行统一管理。" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <Button
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/regist_btn"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/white"
        android:background="@color/green_button"
        android:gravity="center"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        >

        <Button
            android:layout_weight="1"
            android:id="@+id/login_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="直接登录"
            android:textColor="@color/grey_deep"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:layout_weight="1"
            android:id="@+id/prolem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="遇到问题？"
            android:textColor="@color/grey_deep"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>