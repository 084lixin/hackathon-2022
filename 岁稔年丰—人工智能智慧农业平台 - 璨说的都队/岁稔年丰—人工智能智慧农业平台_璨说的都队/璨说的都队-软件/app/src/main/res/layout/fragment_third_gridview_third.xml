<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/pic_word_cards"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:outlineAmbientShadowColor="#DDF5F7"
    android:outlineSpotShadowColor="#DDF5F7"
    app:cardElevation="20dp"
    android:layout_height="365dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/pi_words_images"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fragment_second_up_2"
                ></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/pi_words_label"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:text="剪纸教程"
                    android:paddingLeft="5dp"
                    android:textColor="#2DD8BA"
                    android:paddingTop="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/video_item"
                    ></TextView>
                <TextView
                    android:id="@+id/pi_words_title"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="19sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="14dp"
                    android:text="               15天练就简单动物剪纸技艺，拯救手残党"
                    ></TextView>
            </FrameLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/pi_words_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#A5A0A0"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="我是一个详细介绍的内容，你们一定不知道咱在说什么吧"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pi_words_url"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/tx1"
                        ></de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/pi_words_name"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剪纸传承人玥姐"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        ></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>