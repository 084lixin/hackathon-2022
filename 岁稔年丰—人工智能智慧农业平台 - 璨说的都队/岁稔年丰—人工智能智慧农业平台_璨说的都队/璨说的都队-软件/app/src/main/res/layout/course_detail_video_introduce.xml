<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:outlineAmbientShadowColor="@color/white"
    android:outlineSpotShadowColor="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/CourseDetailVideoCardRadius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCourseDetailVideoIntroduceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonCourseDetailVideoIntroduceTime"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/course_detail_video_introduce_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="学习进度"
                android:textColor="#1EDCDA"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCourseDetailVideoIntroduceProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-3dp"
                android:text="20"
                android:textColor="#1EDCDA"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="%"
                android:textColor="#1EDCDA"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCourseDetailVideoIntroducePeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="40dp"
                android:text="TextView"
                android:textColor="#969696"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewCourseDetailVideoIntroduceAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="主讲人:啊啊啊"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewCourseDetailVideoIntroduceContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="课程介绍:啊啊啊啊啊啊啊啊啊"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewCourseDetailVideoIntroduceReadMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="展开更多"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>