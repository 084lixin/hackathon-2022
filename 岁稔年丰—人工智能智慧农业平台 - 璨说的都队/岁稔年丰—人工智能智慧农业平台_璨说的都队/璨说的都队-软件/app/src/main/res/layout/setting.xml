<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_back"
                android:layout_width="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_height="30dp"
                android:src="@drawable/agritainment_back"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="20.5dp"
                android:layout_marginTop="37dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/creat_perspn_card"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/creat_person"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开发团队"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                ></TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/QQ_add"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/lianxi"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系我们"
                        android:textSize="19sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/black"
                        ></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/share"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/share_good"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享软件"
                        android:textSize="19sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/black"
                        ></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/gengxin"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/gengxin"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查更新"
                        android:textSize="19sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/black"
                        ></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

   <LinearLayout
       android:layout_marginTop="55dp"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:gravity="center"
       android:orientation="vertical"
       android:layout_gravity="bottom|center"
       android:layout_marginBottom="28dp"
       >
       <Button
           android:outlineSpotShadowColor="@color/white"
           android:outlineAmbientShadowColor="@color/white"
           android:id="@+id/login_out"
           android:layout_width="155dp"
           android:layout_height="60dp"
           android:text="退出账号"
           android:background="@drawable/button_green"
           android:textSize="22sp"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:layout_gravity="center"
       ></Button>
   </LinearLayout>
</LinearLayout>