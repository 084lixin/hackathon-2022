<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_local"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_marginRight="28dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_weight="1.2"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/qztc"
                ></ImageView>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#51E2C6"
                android:background="@drawable/background_hw_1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_hw_1"
                    ></LinearLayout>
            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="19dp"
                    app:cardBackgroundColor="@color/white"
                    android:background="@drawable/background_hw_1"
                    >
                    <LinearLayout
                        android:layout_marginLeft="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/local_name_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="套餐A"
                            android:layout_weight="1"
                            android:textColor="#51E2C6"
                            android:textSize="23sp"
                            ></TextView>
                        <TextView
                            android:id="@+id/local_time_first"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="套餐时长：三天两夜"
                            ></TextView>
                        <TextView
                            android:id="@+id/local_adress_first"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地点：山西**市**县**村"
                            ></TextView>
                        <TextView
                            android:id="@+id/local_price_first"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格:￥300"
                            android:textSize="17sp"
                            android:textColor="#51E2C6"
                            ></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>